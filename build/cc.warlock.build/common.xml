<project>
	<property file="warlock-build.properties"/>
	<property file="build.properties"/>
	
	<taskdef resource="net/sf/antcontrib/antlib.xml">
	  <classpath>
	    <pathelement location="lib/ant-contrib-1.0b3.jar"/>
	  </classpath>
	</taskdef>
	
	<path id="svn-classpath">
		<fileset dir="lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<!--  common macros -->	
	<macrodef name="getWarlockVersion">
		<attribute name="property"/>
		<sequential>
			<if>
				<not><isset property="@{property}"/></not>
				<then>
					<property environment="env"/>
					<property name="@{property}" value="${warlock2-version-prefix}.${env.MICRO_VERSION}_${env.BUILD_SUFFIX}"/>
				</then>
			</if>
		</sequential>
	</macrodef>
	
	<macrodef name="getPlatforms">
		<attribute name="property"/>
		<sequential>
			<var name="platforms" value=""/>
			<var name="comma" value=","/>
			<for list="${configs}" delimiter="&amp;" trim="true" param="platform">
				<sequential>
					<propertyregex
						property="platform-string"
						input="@{platform}"
						regexp="(.+),(.+),(.+)"
						replace="\1.\2.\3"
						override="true"/>
					<propertyregex
						property="platform-string"
						input="${platform-string}"
						regexp=" +" replace=""
						override="true"/>
					
					<var name="platforms" value="${platforms}${comma}${platform-string}"/>
					<var name="comma" value=","/>
				</sequential>
			</for>
			<property name="@{property}" value="${platforms}"/>
		</sequential>
	</macrodef>
</project>